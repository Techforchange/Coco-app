<body class="events">
  <div class="row">

    <div class="grid-example col s12">
      <h4>New Events</h4>
    </div>

    <div class="col s6 m6 6">
        <h6>Google Map for SAT locations</h6>
        <form id='date'>
          <% i = 0 %>
          <% @dates.each do |date| %>

          <p>
            <input class="with-gap" name="date" value="<%=date%>" type="radio" id="test<%= i %>">
            <label for="test<%= i %>"><%=date.strftime('%A %b %e %Y')%></label>
          </p>
          <% i += 1 %>
          <% end %>
          <input type="submit">
        </form>
        <div id="map">
            <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['MAP']%>&callback=initMap"></script>
        </div>
    </div>

    <div class="col s6 m6 6">
      <h4>Choose the best location for you and add it to your calendar to get SAT tips and reminders</h4>
      <h6>Here are the nearest SAT locations:</h6><br>
      <h4>Select only ONE location:</h4>

        <%= form_for :event, url: user_events_path(current_user.id), :html => {:class => "sat-form"}, remote: true do |f| %>
          <ul class="sat-locations">

          </ul>

          <%= f.submit %>
        <% end %>

      <h4>***Remember to <b>register</b> on: </h4><a href="https://collegereadiness.collegeboard.org/sat/register">SAT registration</a>
    </div>
  </div>
</body>
